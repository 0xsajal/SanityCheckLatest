{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "baseUrl": "./",
        "rootDir": ".",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "ts-node": {
        "esm": true
    },
    "lib": [
        "esnext"
    ],
    "include": [
        "function/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}